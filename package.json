{
  "name": "mantine-tailwind-adapter",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/mantine-tailwind-adapter.umd.cjs",
  "module": "./dist/mantine-tailwind-adapter.js",
  "types": "./dist/mantine-tailwind-adapter.d.ts",
  "files": [
    "/dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/mantine-tailwind-adapter.js",
      "require": "./dist/mantine-tailwind-adapter.umd.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@mantine/core": "^7.12.0",
    "@mantine/hooks": "^7.12.0",
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^2.0.5"
  }
}
