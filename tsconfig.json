{
  "compilerOptions": {
    "declaration": true,
    "typeRoots": ["./dist/mantine-tailwind-adapter.d.ts"],

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "**/**.test.ts"],
  "include": ["src"]
}
